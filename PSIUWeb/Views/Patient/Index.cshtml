@model IEnumerable<Patient>

<section class="content"> 
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">
                            Listagem de Pacientes
                        </h3>
                    </div>
                    <div class="card-body">

                        <a asp-controller="Patient" asp-action="Insert">
                            Incluir novo
                        </a>

                        <table class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th>@Html.DisplayNameFor(model => model.Id)</th>
                                    <th>@Html.DisplayNameFor(model => model.Name)</th>
                                    <th>@Html.DisplayNameFor(model => model.BirthDate)</th>
                                    <th>@Html.DisplayNameFor(model => model.Race)</th>
                                    <th>Ações</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach(var p in Model)
                                {                                    
                                    <tr>
                                        <td>@p.Id</td>
                                        <td>@p.Name</td>
                                        <td>@p.BirthDate.ToShortDateString()</td>
                                        <td>@p.Race</td>
                                        <td>
                                            <div class="row">
                                                <div class="col-6">
                                                    <a asp-controller="Patient" 
                                                       asp-action="Edit"
                                                       asp-route-id="@p.Id">
                                                       Editar
                                                   </a>
                                                </div>
                                                <div class="col-6">
                                                    <a asp-controller="Patient"
                                                       asp-action="Delete"
                                                       asp-route-id="@p.Id">
                                                        Excluir
                                                    </a>
                                                </div>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>